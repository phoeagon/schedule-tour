    <div id='sidebarContent'>
        <!--<form id="eventInfo" class="form-horizontal"><fieldset>-->
      <form id="eventInfo" class=""><fieldset>
          <table>
            <tr>
              <th>Title:</th>
              <td><input type="text" class="title" name="title" id="title"></input></td>
            </tr>
            <tr>
              <th>Start Date:</th>
              <td><input type="text" class="datepicker" name="start_date" id="dateFrom"/></td>
            </tr>
            <tr>
              <th>End Date:</th>
              <td><input type="text" class="datepicker" name="end_date" id="dateUntil"/></td>
            </tr>
            <tr>
              <th></th>
              <td><div class="alert alert-error hidden" id="fix-date-msg">Fix your date first!</div></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <input type='checkbox' value='allday' id='alldayCheckbox'>All Day</input>
                <input type='checkbox' value='repeat' id='repeatCheckbox'>Repeat...</input>
              </td>
            </tr>
            <tr class='repeatDetail nodisplay'>
              <th>Repeats:</th>
              <td><select id="repeatFrequency">
                  <option value="0">Daily</option>
                  <option value="1">Every weekday (Monday to Friday)</option>
                  <option value="2">Every Monday, Wednesday, and Friday</option>
                  <option value="3">Every Tuesday, and Thursday</option>
                  <option value="4">Weekly</option>
                  <option value="5">Monthly</option>
                  <option value="6">Yearly</option>
              </select></td>
            </tr>
            <tr id='repeatEvery' class='repeatDetail nodisplay'>
              <th>Repeat every:</th>
              <td>
                <span><input type='number' id='interval' value='1'></input></span>
                <span>Days</span>
              </td>
            </tr>

            <tr class='repeatDetail nodisplay'>
              <th>Repeat on:</th>
              <td id="checkboxes">
                <div>
                  <span><input type="checkbox">S</input></span>
                  <span><input type="checkbox">M</input></span>
                  <span><input type="checkbox">T</input></span>
                  <span><input type="checkbox">W</input></span>
                  <span><input type="checkbox">T</input></span>
                  <span><input type="checkbox">F</input></span>
                  <span><input type="checkbox">S</input></span>
                </div>
              </td>
            </tr>
            <tr class='repeatDetail nodisplay'>
              <th>Ends:</th>
              <td id="endRadio">
                <div>
                  <div><input type="radio" name='endRadioGroup' checked='checked'>Never</input></div>
                  <div><input type="radio" id='endRadioAfter' name='endRadioGroup'>After</input>
                      <span><input type='number' value='1'></input> occurrences</span></div>
                  <div><input type='radio' id='endRadioOn' name='endRadioGroup'>On</input>
                      <span><input type='text' id='repeatEndInput'></input></span></div>
                </div>
              </td>
            </tr>

            <tr>
              <th>Priority:</th>
              <td><div type="text" class="slider" name="priority" id="weight"></div></td>
            </tr>
            <tr>
              <th rowspan=2>Position:</th>
              <td>
                <input type='text' id='newPlace' placeholder='Place Name'></input>
                <button title='pick up place from map' id='pickPlace' onclick='return false;'></button>
              </td>
            </tr>
            <tr>
              <td class="displaynone">
                <span><input type='text' id='newLat' class='latLngInput' placeholder='Lat'></input></span>
                <span><input type='text' id='newLng' class='latLngInput' placeholder='Lng'></input></span>
              </td>
            </tr>
            <tr>
              <th>Privacy:</th>
              <td>
                <input name='privacyRadioGroup' type='radio' value='public'>Public</input>
                <input name='privacyRadioGroup' type='radio' value='private'>Private</input>
              </td>
            </tr>
            <tr>
              <th>Note:</th>
              <td>
                <textarea id="description" name="add-event-note"></textarea>
              </td>
            </tr>
          </table>
        </fieldset>
        <!--<button id="addEventButt" class="btn-primary">Submit</button>-->
        <input type="button" id="addEventButt" class="btn btn-primary sidebarbtn" value="Submit"/>
        <input type="button" id="sidebarCancel" class="btn sidebarbtn" value="Cancel"/>
        <div id='sidebarSpaceholder'></div>
      </form>
    </div>
    
    
